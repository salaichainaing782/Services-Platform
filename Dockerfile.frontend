FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY All-in-One-Marketplace/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY All-in-One-Marketplace/ .

# Build the app
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built assets
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]